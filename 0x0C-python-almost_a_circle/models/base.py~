#!/usr/bin/python3
import json
"""module contains class Base"""

class Base:
    __nb_objects = 0
    def __init__(self, id=None):
        """Initialize Base instances
        Args:
            - id: id of Base instance
        """
        if id is not None:
            self.id = id
        else:
            Base.__nb_objects+=1
            self.id = self.__nb_objects
